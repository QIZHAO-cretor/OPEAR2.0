<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fovdl_appli_fond"
    tools:context=".QuizActivity">
    <ImageView
        android:id="@+id/mbacktohomepage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fovdl_appli_boutonretour"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtTotalQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Questions: 1/10"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:textSize="22sp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="Score: 0"

            />

        <TextView
            android:id="@+id/txtViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:textSize="22sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="5dp"
            android:text="00:30"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"

        >


        <TextView
            android:id="@+id/txtQuestionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Dino Code Academy is Great Place to learn Coding?aaaaaaaaaaa"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_quiz"
                android:button="@null"
                android:freezesText="true"
                android:padding="12dp"
                android:text="Opeating System"
                android:textAlignment="center"
                android:textColor="#141414"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_quiz"
                android:button="@null"
                android:freezesText="true"
                android:padding="12dp"
                android:text="Random  Access Memory"
                android:textAlignment="center"
                android:textColor="#141414"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Random  Access Memory four"
                android:textSize="20sp"
                android:textColor="#141414"
                android:textAlignment="center"
                android:button="@null"
                android:textStyle="bold"
                android:freezesText="true"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/custom_button_quiz"

                />

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Software"
                android:button="@null"
                android:freezesText="true"
                android:textSize="20sp"
                android:textColor="#141414"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/custom_button_quiz"

                />
        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/confirm"
        android:padding="20dp"
        android:text="Next"
        android:textColor="#FFFBFB"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>